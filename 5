#include<iostream>
using namespace std;

void nhap(int a[], int n){
	for(int i=0; i<=n; i++){
		cout<<"nhap gia tri a["<<i<<"]= ";
		cin>>a[i];
	}
}
void xuat(int a[], int n){
	for(int i=0; i<=n;i++){
		cout << a[i] << " ";
	}
}
int dem(int a[], int n){
	if(n==0){
		return 0;
	}else{
		int demso = dem(a,n-1);
		if(a[n-1]>0)
			demso += 1;
			return demso;
		
	}
}
int main(){
	int n; int a[100];
	cout<<"Nhap n: ";
	cin>>n;
	nhap(a,n);
	xuat(a,n);
	
	cout<<"\nVay co "<<dem(a,n)<<" so nguyen duong trong mang"<<endl; 
	return 0;
}
