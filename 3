//X(0) = 1
//Y(0) = 0
//X(n) = x(n – 1) + y(n – 1) (n > 0)
//Y(n) = 3 * x(n – 1) + 2 * y(n – 1) (n > 0)

#include<iostream>
using namespace std;
int Y(int n);
int X(int n){
	if(n==0){
		return 1;
	}else if(n<0){
		return 0;
	}else{
		return X(n-1)+Y(n-1);
	}
}

	Y(int n){
	if(n==0){
		return 0;
	}else if(n<0){
		return 0;
	}else{
		return 3*X(n-1)+2*Y(n-1);
	}
}

int main(){
	int n;cout<<"Nhap n: "; cin>>n;
	X(n);
	Y(n);
	cout<<"vay gia tri bieu thuc X la: "<<X(n)<<endl;
	cout<<"Vay gia tri beiu thuc Y la: "<<Y(n)<<endl;
	return 0;
}
